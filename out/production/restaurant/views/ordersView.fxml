<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.OrdersViewController">
    <center>
      <HBox fx:id="centre_orders_view_hbox" maxHeight="400.0" maxWidth="800.0" minHeight="400.0" minWidth="800.0" prefHeight="400.0" prefWidth="800.0">
         <children>
                <TableView fx:id="orders_items_table" prefHeight="340.0" prefWidth="400.0">
               <padding>
                  <Insets left="3.0" right="3.0" />
               </padding></TableView>
            <TableView fx:id="items_table_view" prefHeight="200.0" prefWidth="200.0" visible="false">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets left="3.0" right="3.0" />
               </padding>
            </TableView>
         </children>
      </HBox>
    </center>
    <top>
        <HBox maxHeight="40.0" minHeight="40.0" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="back_to_menu_button" maxHeight="40.0" maxWidth="100.0" minHeight="40.0" minWidth="100.0" mnemonicParsing="false" onAction="#go_to_menu" prefHeight="40.0" prefWidth="100.0" text="Wróć do menu" wrapText="true">
               <HBox.margin>
                  <Insets left="3.0" right="3.0" />
               </HBox.margin>
               <font>
                  <Font size="12.0" />
               </font></Button>
                <Button fx:id="create_new_order_button" maxHeight="40.0" maxWidth="100.0" minHeight="40.0" minWidth="100.0" mnemonicParsing="false" onAction="#create_new_order" prefHeight="40.0" prefWidth="100.0" text="Utwórz zamówienie">
                    <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                    </HBox.margin>
               <font>
                  <Font size="12.0" />
               </font>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </HBox>
    </top>
</BorderPane>
