<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<GridPane fx:controller="views.LoginToAppController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
        <children>
            <HBox blendMode="SRC_ATOP" layoutY="150.0" maxHeight="50.0" minHeight="50.0" prefHeight="50.0" prefWidth="600.0">
                <children>
                    <Label alignment="CENTER" contentDisplay="CENTER" maxHeight="50.0" maxWidth="230.0" minHeight="50.0" minWidth="170.0" prefHeight="50.0" prefWidth="200.0" text="Login:" wrapText="true" />
                    <TextArea fx:id="sign_in_text_area" maxHeight="50.0" minHeight="50.0" prefHeight="50.0" prefWidth="233.0" />
                    <Button fx:id="sign_in_button" maxHeight="50.0" maxWidth="80.0" minHeight="50.0" minWidth="80.0" mnemonicParsing="false"
                            onAction="#sign_to_app" prefHeight="50.0" prefWidth="80.0" text="Sign in" />
                </children>
                <padding>
                    <Insets left="20.0" right="20.0" />
                </padding>
            </HBox>
        </children>
    </AnchorPane>
</GridPane>