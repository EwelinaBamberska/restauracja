<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import views.AutocompletionTextField?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.BillInfoViewController">
    <top>
        <HBox fx:id="topHBox" maxHeight="46.0" minHeight="46.0" prefHeight="46.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="backToOrdersButton" maxHeight="40.0" maxWidth="150.0" minHeight="40.0" minWidth="150.0" mnemonicParsing="false" onAction="#backToOrdersView" prefHeight="40.0" prefWidth="150.0" text="Back">
                    <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                    </HBox.margin>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
            <padding>
                <Insets bottom="3.0" top="3.0" />
            </padding>
        </HBox>
    </top>
    <bottom>
        <VBox fx:id="bottomVBox" maxHeight="69.0" minHeight="69.0" prefHeight="69.0" BorderPane.alignment="CENTER">
            <children>
                <Label maxHeight="20.0" minHeight="20.0" prefHeight="20.0" text="Add dish to bill">
                    <VBox.margin>
                        <Insets bottom="3.0" left="3.0" />
                    </VBox.margin>
                </Label>
                <HBox maxHeight="40.0" minHeight="40.0" prefHeight="40.0" prefWidth="200.0">
                    <children>
                        <AutocompletionTextField fx:id="nameOfAddedItemTextField" maxHeight="40.0" maxWidth="250.0" minHeight="40.0" minWidth="250.0" onKeyReleased="#showHints" prefHeight="40.0" prefWidth="250.0" promptText="Dish name">
                            <HBox.margin>
                                <Insets left="3.0" right="3.0" />
                            </HBox.margin>
                        </AutocompletionTextField>
                        <TextField fx:id="amountOfAddedItemTextField" maxHeight="40.0" maxWidth="250.0" minHeight="40.0" minWidth="250.0" prefHeight="40.0" prefWidth="250.0" promptText="Amount" text="1" />
                        <Button fx:id="addItemToOrderButton" maxHeight="40.0" maxWidth="150.0" minHeight="40.0" minWidth="150.0" mnemonicParsing="false" onAction="#addItemToOrder" prefHeight="40.0" prefWidth="150.0" text="Add">
                            <HBox.margin>
                                <Insets left="3.0" right="3.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
            <padding>
                <Insets bottom="3.0" top="3.0" />
            </padding>
        </VBox>
    </bottom>
    <center>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="deliverLabel" maxHeight="20.0" minHeight="20.0" prefHeight="20.0" text="Label" />
                <TableView fx:id="itemsTableView" prefHeight="200.0" prefWidth="200.0" />
            </children>
        </VBox>
    </center>
</BorderPane>
