<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.MainViewManagerController">
    <top>
        <HBox maxHeight="50.0" minHeight="50.0" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="3.0" left="10.0" right="10.0" top="3.0" />
            </BorderPane.margin>
            <children>
                <Button fx:id="create_bill_button" maxHeight="50.0" maxWidth="150.0" minHeight="50.0" minWidth="150.0" mnemonicParsing="false" onAction="#go_to_create_bill_view" prefHeight="50.0" prefWidth="150.0" text="Utwórz rachunek" wrapText="true">
                    <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="take_item_from_magazine_button" maxHeight="50.0" maxWidth="150.0" minHeight="50.0" minWidth="150.0" mnemonicParsing="false" onAction="#go_to_take_item_from_magazine" prefHeight="50.0" prefWidth="150.0" text="Zabierz towar z magazynu" wrapText="true">
                    <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="work_hours_button" maxHeight="50.0" maxWidth="150.0" minHeight="50.0" minWidth="150.0" mnemonicParsing="false" onAction="#show_work_hours" prefHeight="50.0" prefWidth="150.0" text="Moje godziny pracy" wrapText="true">
                    <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="log_out_button" maxHeight="50.0" maxWidth="100.0" minHeight="50.0" minWidth="100.0" mnemonicParsing="false" onAction="#log_out" prefHeight="50.0" prefWidth="100.0" text="Wyloguj" wrapText="true">
                    <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </top>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Aktulanie otwarte rachunki:" />
                <ScrollPane prefHeight="200.0" prefWidth="200.0">
                    <content>
                        <ListView fx:id="open_bills_list" prefHeight="275.0" prefWidth="605.0" />
                    </content>
                </ScrollPane>
            </children>
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </VBox>
    </center>
    <bottom>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox layoutX="10.0" layoutY="10.0" maxHeight="50.0" minHeight="50.0" prefHeight="50.0" prefWidth="200.0">
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
               <children>
                  <Button fx:id="menu_button" maxHeight="50.0" maxWidth="150.0" minHeight="50.0" minWidth="150.0" mnemonicParsing="false" onAction="#go_to_menu_options" prefHeight="50.0" prefWidth="150.0" text="Menu" wrapText="true">
                     <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="orders_button" layoutX="23.0" layoutY="10.0" maxHeight="50.0" maxWidth="150.0" minHeight="50.0" minWidth="150.0" mnemonicParsing="false" onAction="#go_to_orders_options" prefHeight="50.0" prefWidth="150.0" text="Zamówienia" wrapText="true">
                     <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="workers_button" layoutX="176.0" layoutY="10.0" maxHeight="50.0" maxWidth="150.0" minHeight="50.0" minWidth="150.0" mnemonicParsing="false" onAction="#go_to_workers_options" prefHeight="50.0" prefWidth="150.0" text="Pracownicy" wrapText="true">
                     <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="magazine_button" layoutX="335.0" layoutY="10.0" maxHeight="50.0" maxWidth="150.0" minHeight="50.0" minWidth="150.0" mnemonicParsing="false" onAction="#go_to_magazine_options" prefHeight="50.0" prefWidth="150.0" text="Magazyn" wrapText="true">
                     <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="3.0" top="3.0" />
               </VBox.margin>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
    </bottom>
</BorderPane>
