<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.WorkerInfoController">
   <bottom>
      <HBox maxHeight="46.0" minHeight="46.0" prefHeight="46.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="deleteWorkerButton" maxHeight="40.0" maxWidth="150.0" minHeight="40.0" minWidth="150.0" mnemonicParsing="false" onAction="#deleteWorker" prefHeight="40.0" prefWidth="150.0" text="Zwolnij pracownika">
               <HBox.margin>
                  <Insets left="3.0" right="3.0" />
               </HBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="3.0" top="3.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <VBox fx:id="centerVBox" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox maxHeight="46.0" minHeight="46.0" prefHeight="46.0" prefWidth="200.0">
               <children>
                  <Label maxHeight="40.0" maxWidth="150.0" minHeight="40.0" minWidth="150.0" prefHeight="40.0" prefWidth="150.0" text="Imię">
                     <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="nameTextField" maxHeight="40.0" maxWidth="400.0" minHeight="40.0" minWidth="400.0" onInputMethodTextChanged="#setChangedData" prefHeight="40.0" prefWidth="400.0" promptText="Imię">
                     <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <padding>
                  <Insets bottom="3.0" top="3.0" />
               </padding>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0" maxHeight="46.0" minHeight="46.0" prefHeight="46.0" prefWidth="200.0">
               <children>
                  <Label maxHeight="40.0" maxWidth="150.0" minHeight="40.0" minWidth="150.0" prefHeight="40.0" prefWidth="150.0" text="Nazwisko">
                     <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="surnameTextField" maxHeight="40.0" maxWidth="400.0" minHeight="40.0" minWidth="400.0" onInputMethodTextChanged="#setChangedData" prefHeight="40.0" prefWidth="400.0" promptText="Nazwisko">
                     <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <padding>
                  <Insets bottom="3.0" top="3.0" />
               </padding>
            </HBox>
            <HBox layoutX="10.0" layoutY="56.0" maxHeight="46.0" minHeight="46.0" prefHeight="46.0" prefWidth="200.0">
               <children>
                  <Label maxHeight="40.0" maxWidth="150.0" minHeight="40.0" minWidth="150.0" prefHeight="40.0" prefWidth="150.0" text="Data zatrudnienia">
                     <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                     </HBox.margin>
                  </Label>
                  <DatePicker fx:id="workDatePicker" maxHeight="40.0" minHeight="40.0" onInputMethodTextChanged="#setChangedData" prefHeight="40.0" promptText="Data zatrudnienia">
                     <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                     </HBox.margin>
                  </DatePicker>
               </children>
               <padding>
                  <Insets bottom="3.0" top="3.0" />
               </padding>
            </HBox>
            <HBox layoutX="10.0" layoutY="102.0" maxHeight="46.0" minHeight="46.0" prefHeight="46.0" prefWidth="200.0">
               <children>
                  <Label maxHeight="40.0" maxWidth="150.0" minHeight="40.0" minWidth="150.0" prefHeight="40.0" prefWidth="150.0" text="Stanowisko">
                     <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                     </HBox.margin>
                  </Label>
                  <MenuButton fx:id="positionButton" maxHeight="40.0" minHeight="40.0" mnemonicParsing="false" prefHeight="40.0" text="MenuButton">
                     <items>
                        <MenuItem fx:id="managerMenuItem" mnemonicParsing="false" onAction="#changePositionToManager" text="Menedżer" />
                        <MenuItem fx:id="waiterMenuItem" mnemonicParsing="false" onAction="#changePositionToWaiter" text="Kelner" />
                        <MenuItem fx:id="cookMenuItem" mnemonicParsing="false" onAction="#changePositionToCook" text="Kucharz" />
                     </items>
                     <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                     </HBox.margin>
                  </MenuButton>
               </children>
               <padding>
                  <Insets bottom="3.0" top="3.0" />
               </padding>
            </HBox>
            <Label maxHeight="30.0" minHeight="30.0" prefHeight="30.0" text="Dodaj przepracowane godziny:">
               <VBox.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </VBox.margin>
            </Label>
            <HBox layoutX="10.0" layoutY="148.0" maxHeight="46.0" minHeight="46.0" prefHeight="46.0" prefWidth="200.0">
               <children>
                  <Label maxHeight="40.0" maxWidth="70.0" minHeight="40.0" minWidth="70.0" prefHeight="40.0" prefWidth="70.0" text="Data">
                     <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                     </HBox.margin>
                  </Label>
                  <DatePicker fx:id="workDayDatePicker" maxHeight="40.0" maxWidth="200.0" minHeight="40.0" minWidth="200.0" prefHeight="40.0" prefWidth="200.0" promptText="Data zatrudnienia">
                     <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                     </HBox.margin>
                  </DatePicker>
                  <Label layoutX="13.0" layoutY="13.0" maxHeight="40.0" maxWidth="70.0" minHeight="40.0" minWidth="70.0" prefHeight="40.0" prefWidth="70.0" text="Ilość">
                     <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="amountOfHoursTextField" maxHeight="40.0" maxWidth="100.0" minHeight="40.0" minWidth="100.0" prefHeight="40.0" prefWidth="100.0" promptText="Ilość godzin" text="8">
                     <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="saveHoursButton" maxHeight="40.0" maxWidth="100.0" minHeight="40.0" minWidth="100.0" mnemonicParsing="false" onAction="#saveHours" prefHeight="40.0" prefWidth="100.0" text="Zapisz">
                     <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="3.0" top="3.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </center>
   <top>
      <HBox maxHeight="46.0" minHeight="46.0" prefHeight="46.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="backToWorkerViewButton" maxHeight="40.0" maxWidth="150.0" minHeight="40.0" minWidth="150.0" mnemonicParsing="false" onAction="#goToWorkerView" prefHeight="40.0" prefWidth="150.0" text="Wróć">
               <HBox.margin>
                  <Insets left="3.0" right="3.0" />
               </HBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="3.0" top="3.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
