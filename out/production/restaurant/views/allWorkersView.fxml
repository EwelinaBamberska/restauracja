<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.TableView?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.AllWorkersViewController">
   <top>
      <HBox fx:id="topHBox" maxHeight="46.0" minHeight="46.0" prefHeight="46.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="backToMenuButton" maxHeight="40.0" maxWidth="150.0" minHeight="40.0" minWidth="150.0" mnemonicParsing="false" onAction="#goToMenu" prefHeight="40.0" prefWidth="150.0" text="Wróć do menu" wrapText="true">
               <HBox.margin>
                  <Insets left="3.0" right="3.0" />
               </HBox.margin>
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="3.0" top="3.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="workersTableView" prefHeight="309.0" prefWidth="668.0" />
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox maxHeight="46.0" minHeight="46.0" prefHeight="46.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="3.0" top="3.0" />
         </padding>
         <children>
            <Button fx:id="addWorkerButton" maxHeight="40.0" maxWidth="150.0" minHeight="40.0" minWidth="150.0" mnemonicParsing="false" onAction="#goToAddWorkerView" prefHeight="40.0" prefWidth="150.0" text="Dodaj pracownika">
               <HBox.margin>
                  <Insets left="3.0" right="3.0" />
               </HBox.margin>
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
            <TextField fx:id="findWorkerTextField" maxHeight="40.0" maxWidth="350.0" minHeight="40.0" minWidth="350.0" prefHeight="40.0" prefWidth="350.0" promptText="Imię i nazwisko">
               <HBox.margin>
                  <Insets left="3.0" right="3.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="findWorkerButton" maxHeight="40.0" maxWidth="150.0" minHeight="40.0" minWidth="150.0" mnemonicParsing="false" onAction="#findWorker" prefHeight="40.0" prefWidth="150.0" text="Wyszukaj pracownika" wrapText="true">
               <font>
                  <Font size="12.0" />
               </font>
               <HBox.margin>
                  <Insets left="3.0" right="3.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
