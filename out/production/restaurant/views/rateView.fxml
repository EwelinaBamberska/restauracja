<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.RateViewController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label text="How you rate quality of service?">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="52.0" prefWidth="600.0">
               <children>
                  <RadioButton fx:id="veryBadRadioButton" mnemonicParsing="false" text="Very bad">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="badRadioButton" layoutX="13.0" layoutY="10.0" mnemonicParsing="false" text="Bad">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="okRadioButton" layoutX="93.0" layoutY="10.0" mnemonicParsing="false" selected="true" text="Ok">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="goodRadioButton" layoutX="200.0" layoutY="10.0" mnemonicParsing="false" text="Good">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="veryGoodRadioButton" layoutX="200.0" layoutY="10.0" mnemonicParsing="false" text="Very good">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </RadioButton>
               </children>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </HBox>
            <Button fx:id="payForBillButton" maxHeight="40.0" maxWidth="150.0" minHeight="40.0" minWidth="150.0" mnemonicParsing="false" onAction="#payForBill" prefHeight="40.0" prefWidth="150.0" text="Pay for bill">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
